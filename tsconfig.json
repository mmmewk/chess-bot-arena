{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "allowJs": true,
    "noEmit": true, // babel will emit output files, not tsc
    "strict": true,
    "isolatedModules": true, // required when using babel-preset-typscript
    "esModuleInterop": true,
    "skipLibCheck": true,
    "jsx": "react",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "baseUrl": "src"
  },
  "include": [
    "src"
  ]
}
